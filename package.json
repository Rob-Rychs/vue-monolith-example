{
  "name": "vue-monolith-example",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "cacheDirectories": [
    "node_modules",
    "backend/node_modules",
    "frontend/node_modules",
    "frontend/dist"
  ],
  "scripts": {
    "predev": "yarn install",
    "dev:backend": "yarn --cwd backend dev",
    "dev:frontend": "yarn --cwd frontend dev",
    "dev": "run-p dev:*",
    "lint:eslint": "eslint --ext .js,.vue --fix .",
    "lint:markdownlint": "markdownlint *.md",
    "lint:prettier": "prettier --write --loglevel warn \"**/*.{json,js,vue,md}\"",
    "lint": "run-s lint:*",
    "build": "yarn --cwd frontend build",
    "heroku-postbuild": "yarn build",
    "start": "yarn --cwd backend start"
  },
  "gitHooks": {
    "pre-commit": "cross-env PRE_COMMIT=true lint-staged"
  },
  "engines": {
    "node": ">=8.11.3",
    "yarn": ">=1.0.0"
  },
  "devDependencies": {
    "@vue/cli-plugin-eslint": "3.1.x",
    "@vue/eslint-config-prettier": "4.0.x",
    "@vue/eslint-config-standard": "4.0.x",
    "cross-env": "5.2.x",
    "imagemin-lint-staged": "0.3.x",
    "lint-staged": "8.0.x",
    "markdownlint-cli": "0.13.x",
    "npm-run-all": "4.1.x",
    "yorkie": "2.0.x"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "eslintConfig": {
    "root": true,
    "parserOptions": {
      "sourceType": "script"
    },
    "extends": [
      "plugin:vue/recommended",
      "standard",
      "prettier",
      "prettier/standard"
    ],
    "overrides": [
      {
        "files": [
          "frontend/src/**/*"
        ],
        "excludedFiles": "app.config.js",
        "parserOptions": {
          "parser": "babel-eslint",
          "sourceType": "module"
        },
        "env": {
          "browser": true
        }
      },
      {
        "files": [
          "**/*.unit.js"
        ],
        "parserOptions": {
          "parser": "babel-eslint",
          "sourceType": "module"
        },
        "env": {
          "jest": true
        },
        "globals": {
          "mount": false,
          "shallowMount": false,
          "shallowMountView": false,
          "createComponentMocks": false,
          "createModuleStore": false
        }
      }
    ]
  },
  "eslintIgnore": [
    "node_modules/",
    "dist/"
  ],
  "lint-staged": {
    "*.json": [
      "prettier --write --loglevel warn",
      "git add"
    ],
    "*.js": [
      "eslint --fix",
      "prettier --write --loglevel warn",
      "git add"
    ],
    "*.vue": [
      "eslint --fix",
      "prettier --write --loglevel warn",
      "git add"
    ],
    "*.md": [
      "markdownlint",
      "prettier --write --loglevel warn",
      "git add"
    ],
    "*.{png,jpeg,jpg,gif,svg}": [
      "imagemin-lint-staged",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "arrowParens": "avoid",
    "proseWrap": "never"
  }
}
